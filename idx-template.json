{
  "name": "WinDev",
  "description": "Windows Development",
  "categories": ["Desktop"],
  "icon": "https://avatars.githubusercontent.com/u/6154722?s=40&v=4",
  "publisher": "Unknown",
  "host": {
    "virtualization": true
  },
  "params": [
    {
      "id": "osVariant",
      "name": "Operating System Variant",
      "type": "select",
      "default": "windows",
      "required": true,
      "options": [
        { "value": "windows", "label": "Windows" },
        { "value": "macos", "label": "macOS (Docker container)" },
        { "value": "windows-arm", "label": "Windows ARM (Docker container)" }
      ]
    },
    {
      "id": "winUser",
      "name": "Windows User",
      "type": "text",
      "default": "Bill",
      "required": true,
      "condition": "osVariant === 'windows' || osVariant === 'windows-arm'"
    },
    {
      "id": "winPass",
      "name": "Windows Password",
      "type": "text",
      "default": "BillGates123@",
      "hidden": false,
      "required": true,
      "condition": "osVariant === 'windows' || osVariant === 'windows-arm'"
    },
    {
      "id": "tailscaleAuthKey",
      "name": "Tailscale Auth Token",
      "type": "text",
      "default": ""
    }
  ]
}
